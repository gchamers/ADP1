<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center" >
    
    <ScrollView
        android:id="@+id/input_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" >

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal" >

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/menu_create_btn"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="@string/menu_create_new"
                android:gravity="center"
                android:textSize="12sp" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/menu_cancel_btn"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_column="1"
                android:layout_row="0"
                android:text="@string/menu_cancel"
                android:gravity="center"
                android:textSize="12sp" />
            
            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/menu_delete_btn"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_column="2"
                android:layout_row="0"
                android:text="@string/menu_delete"
                android:gravity="center"
                android:textSize="12sp" />
            
            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/menu_edit_btn"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="@string/menu_edit"
                android:gravity="center"
                android:textSize="12sp" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/menu_save_to_database_btn"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_column="1"
                android:layout_row="1"
                android:text="@string/menu_save_to_database"
                android:textAlign="center"
                android:gravity="center"
                android:textSize="12sp" />
        
            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/nav_input_home_btn"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_column="2"
                android:layout_row="1"
                android:text="@string/nav_input_home"
                android:gravity="center"
                android:textSize="12sp" />
     
        </GridLayout>
    </ScrollView>
    
<TextView
    android:id="@+id/title_advisors"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/input_menu"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
	android:textSize="20sp"
    android:text="@string/title_advisors"
    android:textStyle="bold" /> 


<TextView
    android:id="@+id/description_scroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title_advisors"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
	android:textSize="12sp"
    android:text="@string/description_scroll"/> 


    <ScrollView
        android:id="@+id/new_input_sv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_scroll"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" >

        <GridLayout
            android:id="@+id/new_input_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/contact_info_advisor_name_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="12sp"
                android:text="@string/contact_info_advisor_name"
                android:gravity="left" />

            <EditText
                android:id="@+id/ccontact_info_advisor_name_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="12sp"
                android:hint="@string/suggested_client_name"
                android:gravity="right"/>

            <TextView
                android:id="@+id/contact_info_advisor_street_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="5"
                android:textSize="12sp"
                android:text="@string/contact_info_advisor_street"
                android:gravity="left" />

            <EditText
                android:id="@+id/contact_info_advisor_street_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="5"
                android:textSize="12sp"
                android:hint="@string/suggested_advisor_street"
                android:gravity="right" />

            <TextView
                android:id="@+id/contact_info_advisor_city_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="6"
                android:textSize="12sp"
                android:text="@string/contact_info_advisor_city"
                android:gravity="left" />

            <EditText
                android:id="@+id/contact_info_advisor_city_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:textSize="12sp"
                android:hint="@string/suggested_client_city"
                android:layout_row="6"
                android:gravity="right" />

            <TextView
                android:id="@+id/contact_info_advisor_state_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="7"
                android:textSize="12sp"
                android:text="@string/contact_info_client_state"
                android:gravity="left" />

            <EditText
                android:id="@+id/contact_info_advisor_state_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="7"
                android:textSize="12sp" 
                android:hint="@string/suggested_client_state"
                android:gravity="right" />

            <TextView
                android:id="@+id/contact_info_advisor_zip_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="8"
                android:textSize="12sp"
                android:text="@string/contact_info_client_zip"
                android:gravity="left" />

            <EditText
                android:id="@+id/contact_info_advisor_zip_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="8"
                android:gravity="right"
                android:hint="@string/suggested_advisor_zip"
                android:textSize="12sp" />
            
            <TextView
                android:id="@+id/contact_info_advisor_phone_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="9"
                android:textSize="12sp"
                android:text="@string/contact_info_advisor_phone"
                android:gravity="left" />

            <EditText
                android:id="@+id/contact_info_advisor_phone_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="9"
                android:gravity="right"
                android:hint="@string/suggested_advisor_phone"
                android:inputType="phone"
                android:textSize="12sp" />
            
             <TextView
                android:id="@+id/contact_info_advisor_email_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="10"
                android:textSize="12sp"
                android:text="@string/contact_info_advisor_phone"
                android:gravity="left" />

            <EditText
                android:id="@+id/contact_info_advisor_email_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:textSize="12sp"
                android:hint="@string/suggested_advisor_email"
                android:inputType="textWebEmailAddress"
                android:layout_row="10"
                android:gravity="right"  />

            
           
        </GridLayout>
    </ScrollView>
</RelativeLayout>