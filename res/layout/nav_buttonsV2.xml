<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center" >
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" >

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal" >
            
		     <Button
	   			android:id="@+id/personal_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/personal"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
		     
		    <Button
		        android:id="@+id/income_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/income"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
		     
		     <Button
		        android:id="@+id/plan_choices_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/plan_choices"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
		     
		     <Button
		        android:id="@+id/expenses_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/expenses"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
		     
		     <Button
		        android:id="@+id/results_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/results"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
		
		    <Button
		        android:id="@+id/Investments_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/investments"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
		    
		    <Button
		        android:id="@+id/share_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/share"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
		    
		    <Button
		        android:id="@+id/retirement_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/retirement"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
		    
		    <Button
		        android:id="@+id/help_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/help"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
		    
		    <Button
		        android:id="@+id/real_property_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/real_property"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
		    
		    <Button
		        android:id="@+id/about_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/about"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
		
		    <Button
		        android:id="@+id/business_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/business"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
		    
		    <Button
		        android:id="@+id/advisors_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/advisors"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
	
		    <Button
		        android:id="@+id/life_insurance_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="6"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/life_insurance"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />
	
        </GridLayout>
    </ScrollView>

</RelativeLayout>
