<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center" >
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" >

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal" >
        
            <Button
                android:id="@+id/home_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="@string/nav_home"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/save_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_row="0"
                android:text="@string/menu_save"
                android:textAlign="center"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/edit_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:layout_row="0"
                android:text="@string/menu_edit"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/create_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="@string/menu_create_new"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_row="1"
                android:text="@string/menu_cancel"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:layout_row="1"
                android:text="@string/menu_delete"
                android:textAlignment="center"
                android:textSize="12sp" />
        </GridLayout>
    </ScrollView>
    
<TextView
    android:id="@+id/title_income"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/scrollView1"
    android:layout_marginLeft="15dp"
	android:textSize="20sp"
    android:text="@string/title_income"
    android:textStyle="bold" 
</TextView>

    <ScrollView
        android:id="@+id/new_input_sv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_income"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp" >

        <GridLayout
            android:id="@+id/new_input_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="12sp"
                android:text="@string/item_name" />

            <EditText
                android:id="@+id/name_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="12sp"
                android:hint="@string/suggested_name"
                android:gravity="right"/>

            <TextView
                android:id="@+id/amount_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="1"
                android:textSize="12sp"
                android:text="@string/item_amount" />

            <EditText
                android:id="@+id/amount_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="1"
                android:textSize="12sp"
                android:hint="@string/suggested_amount"
                android:gravity="right" />
            
            <TextView
                android:id="@+id/add_to_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="2"
                android:textSize="12sp"
                android:text="@string/item_add_to" />

            <EditText
                android:id="@+id/add_to_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="2"
                android:textSize="12sp"
                android:hint="@string/suggested_add_to"
                android:gravity="right" />

            <TextView
                android:id="@+id/growth_rate_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="3"
                android:textSize="12sp"
                android:text="@string/item_growth_rate" />

            <EditText
                android:id="@+id/growth_rate_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:textSize="12sp"
                android:layout_row="3"
                android:hint="@string/suggested_growth_rate" 
                android:gravity="right" />

            <TextView
                android:id="@+id/begin_year_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="4"
                android:textSize="12sp"
                android:text="@string/item_year_begin" />

            <EditText
                android:id="@+id/begin_year_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="4"
                android:textSize="12sp"
                android:hint="@string/suggested_year_begin" 
                android:gravity="right" />

            <TextView
                android:id="@+id/end_year_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="5"
                android:textSize="12sp"
                android:text="@string/item_year_end" />

            <EditText
                android:id="@+id/end_year_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:textSize="12sp"
                android:layout_row="5"
                android:hint="@string/suggested_year_end"
                android:gravity="right"  />
            
            <TextView
                android:id="@+id/income_tax_rate_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="6"
                android:textSize="12sp"
                android:text="@string/item_income_tax_rate" />

            <EditText
                android:id="@+id/income_tax_rate_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:textSize="12sp"
                android:layout_row="6"
                android:hint="@string/suggested_income_tax_rate"
                android:gravity="right"  />
           
        </GridLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_input_sv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp" >

        <GridLayout
            android:id="@+id/grid_layout_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="10"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/grid_name_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="@string/grid_name"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/grid_amount_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="@string/grid_amount"
                android:textSize="12sp" />

            
            
        </GridLayout>
    </ScrollView>

   

</RelativeLayout>