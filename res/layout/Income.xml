<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center" >
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" >

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal" >
        
            <Button
                android:id="@+id/home_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/home"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />

            <Button
                android:id="@+id/save_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="@string/save"
                android:textAlign="center"
                android:textAlignment="center"
                android:textSize="12.5dp" />

            <Button
                android:id="@+id/edit_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:text="@string/edit"
                android:textAlign="center"
                android:textAlignment="center"
                android:textSize="12.5dp" />

            <Button
                android:id="@+id/create_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="@string/create_new"
                android:textAlign="center"
                android:textAlignment="center"
                android:textSize="12.5dp" />

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="@string/cancel"
                android:textAlign="center"
                android:textAlignment="center"
                android:textSize="12.5dp" />

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:text="@string/delete"
                android:textAlign="center"
                android:textAlignment="center"
                android:textSize="12.5dp" />
        </GridLayout>
    </ScrollView>
    
<TextView
    android:id="@+id/title_income"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/scrollView1"
    android:layout_marginLeft="15dp"
	android:textSize="20sp"
    android:text="@string/title_income"
    android:textStyle="bold" 
</TextView>

    <ScrollView
        android:id="@+id/new_input_sv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_income"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp" >

        <GridLayout
            android:id="@+id/new_input_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="12.5dp"
                android:text="@string/name" />

            <EditText
                android:id="@+id/name_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="12.5dp"
                android:hint="@string/suggested_name"
                android:gravity="right"/>

            <TextView
                android:id="@+id/amount_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="1"
                android:textSize="12.5dp"
                android:text="@string/amount" />

            <EditText
                android:id="@+id/amount_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="1"
                android:textSize="12.5dp"
                android:hint="@string/suggested_amount"
                android:gravity="right" />
            
            <TextView
                android:id="@+id/add_to_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="2"
                android:textSize="12.5dp"
                android:text="@string/add_to" />

            <EditText
                android:id="@+id/add_to_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="2"
                android:textSize="12.5dp"
                android:hint="@string/suggested_add_to"
                android:gravity="right" />

            <TextView
                android:id="@+id/growth_rate_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="3"
                android:textSize="12.5dp"
                android:text="@string/growth_rate" />

            <EditText
                android:id="@+id/growth_rate_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:textSize="12.5dp"
                android:layout_row="3"
                android:hint="@string/suggested_growth_rate" 
                android:gravity="right" />

            <TextView
                android:id="@+id/begin_year_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="4"
                android:textSize="12.5dp"
                android:text="@string/begin_year" />

            <EditText
                android:id="@+id/begin_year_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="4"
                android:textSize="12.5dp"
                android:hint="@string/suggested_begin_year" 
                android:gravity="right" />

            <TextView
                android:id="@+id/end_year_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="5"
                android:textSize="12.5dp"
                android:text="@string/end_year" />

            <EditText
                android:id="@+id/end_year_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:textSize="12.5dp"
                android:layout_row="5"
                android:hint="@string/suggested_end_year"
                android:gravity="right"  />
            
            <TextView
                android:id="@+id/income_tax_rate_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="6"
                android:textSize="12.5dp"
                android:text="@string/income_tax_rate" />

            <EditText
                android:id="@+id/income_tax_rate_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:textSize="12.5dp"
                android:layout_row="6"
                android:hint="@string/suggested_income_tax_rate"
                android:gravity="right"  />
           
        </GridLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_input_sv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp" >

        <GridLayout
            android:id="@+id/new_input_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="10"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/grid_name_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:text="@string/grid_name"
                android:textSize="12.5dp" />

            <TextView
                android:id="@+id/grid_amount_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:text="@string/grid_amount"
                android:textSize="12.5dp" />

            <TextView
                android:id="@+id/grid_growth_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="0"
                android:text="@string/grid_growth_rate"
                android:textSize="12.5dp" />
            
            <TextView
                android:id="@+id/grid_begin_year_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:layout_row="0"
                android:text="@string/grid_begin_year"
                android:textSize="12.5dp" />
            
            <TextView
                android:id="@+id/grid_end_year_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="4"
                android:layout_row="0"
                android:text="@string/grid_end_year"
                android:textSize="12.5dp" />
            
            <TextView
                android:id="@+id/grid_recur_cycle_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="5"
                android:layout_row="0"
                android:text="@string/grid_recur_cycle"
                android:textSize="12.5dp" />

            <EditText
                android:id="@+id/name_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="1"
                android:hint="@string/suggested_name"
                android:textAlignment="textEnd"
                android:textSize="12.5dp" />

            <EditText
                android:id="@+id/amount_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="1"
                android:hint="@string/suggested_amount"
                android:textAlignment="textEnd"
                android:textSize="12.5dp" />

            <EditText
                android:id="@+id/growth_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="1"
                android:hint="@string/suggested_growth_rate"
                android:textAlignment="textEnd"
                android:textSize="12.5dp" />
            
            <EditText
                android:id="@+id/begin_year_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:layout_row="1"
                android:hint="@string/suggested_begin_year"
                android:textAlignment="textEnd"
                android:textSize="12.5dp" />
            
            <EditText
                android:id="@+id/end_year_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="4"
                android:layout_row="1"
                android:hint="@string/suggested_end_year"
                android:textAlignment="textEnd"
                android:textSize="12.5dp" />
            
            
        </GridLayout>
    </ScrollView>

   

</RelativeLayout>