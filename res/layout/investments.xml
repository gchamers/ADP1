<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center" >
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" >

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal" >
        
            <Button
                android:id="@+id/home_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/home"
                android:textAlignment="center"
                android:textSize="12.5dp"
                android:textStyle="normal"
                android:typeface="normal" />

            <Button
                android:id="@+id/save_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="@string/save"
                android:textAlign="center"
                android:textAlignment="center"
                android:textSize="12.5dp" />

            <Button
                android:id="@+id/edit_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:text="@string/edit"
                android:textAlign="center"
                android:textAlignment="center"
                android:textSize="12.5dp" />

            <Button
                android:id="@+id/create_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="@string/create_new"
                android:textAlign="center"
                android:textAlignment="center"
                android:textSize="12.5dp" />

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="@string/cancel"
                android:textAlign="center"
                android:textAlignment="center"
                android:textSize="12.5dp" />

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:text="@string/delete"
                android:textAlign="center"
                android:textAlignment="center"
                android:textSize="12.5dp" />
        </GridLayout>
    </ScrollView>
    
<TextView
    android:id="@+id/title_investments"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/scrollView1"
    android:layout_marginLeft="15dp"
	android:textSize="20sp"
    android:text="@string/title_investments"
    android:textStyle="bold" 
</TextView>

    <ScrollView
        android:id="@+id/new_input_sv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_investments"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp" >

        <GridLayout
            android:id="@+id/new_input_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="12.5dp"
                android:text="@string/name" />

            <EditText
                android:id="@+id/name_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="12.5dp"
                android:hint="@string/suggested_name"
                android:gravity="right"/>
            
            <TextView
                android:id="@+id/ownership_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="1"
                android:textSize="12.5dp"
                android:text="@string/ownership" />

            <EditText
                android:id="@+id/ownership_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:textSize="12.5dp"
                android:layout_row="1"
                android:hint="@string/suggested_ownership"
                android:gravity="right"  />

            <TextView
                android:id="@+id/value_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="2"
                android:textSize="12.5dp"
                android:text="@string/value" />

            <EditText
                android:id="@+id/value_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="2"
                android:textSize="12.5dp"
                android:hint="@string/suggested_value"
                android:gravity="right" />
            
            <TextView
                android:id="@+id/growth_rate_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="3"
                android:textSize="12.5dp"
                android:text="@string/growth_rate" />

            <EditText
                android:id="@+id/growth_rate_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:textSize="12.5dp"
                android:layout_row="3"
                android:hint="@string/suggested_growth_rate" 
                android:gravity="right" />

            <TextView
                android:id="@+id/begin_year_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="4"
                android:textSize="12.5dp"
                android:text="@string/begin_year" />

            <EditText
                android:id="@+id/begin_year_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_row="4"
                android:textSize="12.5dp"
                android:hint="@string/suggested_begin_year" 
                android:gravity="right" />

            <TextView
                android:id="@+id/end_year_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="5"
                android:textSize="12.5dp"
                android:text="@string/end_year" />

            <EditText
                android:id="@+id/end_year_et"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:textSize="12.5dp"
                android:layout_row="5"
                android:hint="@string/suggested_end_year"
                android:gravity="right"  />
            
            
           
        </GridLayout>
    </ScrollView>

    
            
            
        </GridLayout>
    </ScrollView>

   

</RelativeLayout>